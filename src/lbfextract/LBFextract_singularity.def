Bootstrap: docker
From: ubuntu:latest

%post
    # Install Git
    apt-get update && apt-get install -y curl git

    # Install Conda
    apt-get update && apt-get install -y curl
    curl -O https://repo.anaconda.com/miniconda/Miniconda3-latest-Linux-x86_64.sh
    bash Miniconda3-latest-Linux-x86_64.sh -b -p /opt/conda
    rm Miniconda3-latest-Linux-x86_64.sh
    echo ". /opt/conda/etc/profile.d/conda.sh" >> ~/.bashrc
    . /opt/conda/etc/profile.d/conda.sh

    # Create and activate a Conda environment
    conda create -n my_env python=3.10 -y
    conda activate my_env
    conda install -c conda-forge gcc

    # installing LBFextract
    mkdir /opt/github && cd /opt/github
    git clone "https://isy89:token@github.com/Isy89/LBFextract.git" && cd LBFextract
    echo $PWD
    git fetch
    git checkout Kruskal_test
    python setup.py bdist_wheel && python -m pip install --force-reinstall dist/*.whl
    fextract setup create-conda-envs
    pip install pytest
    pytest -s ./tests/test_cli.py::TestCli::test_extract_coverage

%environment
    export PATH=/opt/conda/bin:$PATH

%runscript
    . /opt/conda/etc/profile.d/conda.sh
    conda activate my_env
    exec fextract "$@"